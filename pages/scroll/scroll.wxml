<!--pages/scroll/scroll.wxml-->
<text>pages/scroll/scroll.wxml</text>
<!-- 水平滚动 scroll-x -->
<scroll-view class="container1" scroll-x>
  <view wx:for="{{10}}" wx:key="index" class="item1">{{item}}</view>
</scroll-view>
<!-- 垂直滚动 scroll-y -->
<scroll-view class="container2" scroll-y>
  <view wx:for="{{10}}" wx:key="index" class="item2">{{item}}</view>
</scroll-view>
<!-- 其他补充 
监听滚动事件bindscroll 
监听滚动到最顶部/最左侧事件bindscrolltoupper 
监听滚动到底部/最右侧事件bindscrolltolower
-->
<!--
  upper-threshold:距顶部/左边多远时，触发 scrolltoupper 事件 
  lower-threshold:距底部/右边多远时，触发 scrolltolower 事件
-->
<scroll-view  class="container2" 
              scroll-y bindscroll="bindscroll"
              bindscrolltoupper="bindscrolltoupper" 
              bindscrolltolower="bindscrolltolower"
              upper-threshold="100"
              lower-threshold="100">
  <view wx:for="{{10}}" wx:key="index" class="item2">{{item}}</view>
</scroll-view>